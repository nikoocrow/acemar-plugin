  "apiVersion": 3,
  "name": "acemar/timeline",
  "title": "Timeline",
  "category": "acemar",
  "icon": "clock",
  "description": "Línea de tiempo interactiva con imagen y navegación por años",
  "keywords": [
    "timeline",
    "historia",
    "años",
    "hitos"
  ],
  "textdomain": "acemar-blocks",
  "supports": {
    "align": [
      "wide",
      "full"
    ],
    "html": false
  },

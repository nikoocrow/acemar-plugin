{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "acemar/hero-video",
  "title": "Hero Video",
  "category": "acemar",
  "icon": "video-alt3",
  "description": "Banner hero con video de fondo desde URL",
  "keywords": ["hero", "video", "banner", "fondo"],
  "textdomain": "acemar-blocks",
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "attributes": {
    "align": {
      "type": "string",
      "default": "full"
    },
    "backgroundVideoUrl": {
      "type": "string",
      "default": ""
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0.5
    },
    "minHeight": {
      "type": "number",
      "default": 500
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}